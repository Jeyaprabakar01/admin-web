# Top-level EditorConfig
root = true

# Default settings for text files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript / TypeScript (app, shadcn/ui components)
[*.{js,cjs,mjs,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON (package.json, tsconfig.json, .prettierrc.json, etc.)
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML (GitHub Actions, lint configs)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# CSS/Sass (Tailwind or global styles)
[*.{css,scss}]
indent_style = space
indent_size = 2

# Markdown & MDX: keep intentional trailing spaces (line breaks)
[*.{md,mdx}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefiles must use tabs
[Makefile]
indent_style = tab

# Environment files
[.env*]
indent_style = space
indent_size = 2

# Lockfiles (keep as-is; editors may still normalize EOL/EOF)
[package-lock.json]
insert_final_newline = fals
